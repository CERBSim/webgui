{
    "compilerOptions": {
        "outDir": "./dist/",
        "sourceMap": true,
        "strict": true,
        "noImplicitReturns": false,            // fixme
        "noImplicitAny": false,                // fixme
        "noImplicitThis": false,               // fixme
        "strictPropertyInitialization": false, // fixme
        "strictNullChecks": false,             // fixme
        "module": "es6",
        "moduleResolution": "node",
        "target": "es6",
        "allowJs": true,
    },
    "lib": [
      "es2016",
      "dom"
    ],
    "include": [
        "./src/**/*"
    ]
}
